@model tahsinERP.Models.PRODUCTPLAN
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (tahsinERP.Models.RoleHelper.IsChangePermitted(User.Identity.Name, ViewContext.RouteData.Values["controller"].ToString(), ViewContext.RouteData.Values["action"].ToString()))
{
    <div class="app-content content">
        <div class="content-overlay"></div>
        <div class="content-wrapper">
            <div class="content-header row">
                <div class="content-header-left col-12 mb-2 mt-1">
                    <div class="row breadcrumbs-top">
                        <div class="col-12">
                            <div class="breadcrumb-wrapper col-12">
                                <ol class="breadcrumb rounded-pill breadcrumb-divider">
                                    <li class="breadcrumb-item">
                                        <a href="~/Home"><i class="bx bx-home-alt"></i></a>
                                    </li>
                                    <li class="breadcrumb-item">
                                        <a href="~/ProductPlan/Index">Product Plans</a>
                                    </li>
                                    <li class="breadcrumb-item active">
                                        Rejadagi mahsulot malumotlari ochirish
                                    </li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="content-body">
                <section class="invoice-edit-wrapper">
                    <div class="row">
                        <div class="col-xl-9 col-md-8 col-12">
                            <div class="card">
                                <div class="card-content">
                                    <div class="card-body pb-0 mx-25">
                                        <div class="row invoice-info">
                                            <div class="col-lg-12 col-md-6 mt-25">
                                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                <hr>
                                                <h6 class="invoice-to">Mahsulotni rejadagi miqdori</h6>
                                                <fieldset class="invoice-address form-group">
                                                    @Html.DisplayFor(model => model.PlannedQty, new { @class = "form-control" })
                                                </fieldset>
                                                <h6 class="invoice-to">Reja labeli</h6>
                                                <fieldset class="invoice-address form-group">
                                                    @Html.DisplayFor(model => model.Label, new { @class = "form-control" })
                                                </fieldset>
                                                <h6 class="invoice-to">Boshlangan sana</h6>
                                                <fieldset class="invoice-address form-group">
                                                    @Html.DisplayFor(model => model.IssueDate, new { @class = "form-control" })
                                                </fieldset>
                                                <h6 class="invoice-to">Muddati</h6>
                                                <fieldset class="invoice-address form-group">
                                                    @Html.DisplayFor(model => model.DueDate, new { @class = "form-control" })
                                                </fieldset>
                                                <h6 class="invoice-to">Product nomi</h6>
                                                <fieldset class="invoice-address form-group">
                                                    @Html.DisplayFor(model => model.PRODUCT.Name, new { @class = "form-control" })
                                                </fieldset>
                                                <hr />
                                                <h6>Haqiqatan ham ushbu modul va uning ruxsatnomalarini oʻchirib tashlamoqchimisiz?</h6>
                                                @using (Html.BeginForm("Delete", "ProductPlan", FormMethod.Post))
                                                {
                                                    @Html.AntiForgeryToken()
                                                    @Html.HiddenFor(model => model.ID)
                                                    <input type="submit" value="Delete" class="btn btn-danger" />
                                                    <a href="~/ProductPlan" class="btn btn-secondary">Cancel</a>
                                                }
                                            </div>
                                        </div>
                                        <hr />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
}
else
{
    Response.Redirect(Url.Action("Index", "ViewNotAuthorized"));
}
