@model List<tahsinERP.Models.PRODUCTPLAN>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (tahsinERP.Models.RoleHelper.IsViewPermitted(User.Identity.Name, ViewContext.RouteData.Values["controller"].ToString(), ViewContext.RouteData.Values["action"].ToString()))
{
    bool changePermit = false;
    if (tahsinERP.Models.RoleHelper.IsChangePermitted(User.Identity.Name, "ProductPlan"))
    {
        changePermit = true;
    }
    <div class="app-content content">
        <div class="content-overlay"></div>
        <div class="content-wrapper">
            <div class="content-header row">
                <div class="content-header-left col-12 mb-2 mt-1">
                    <div class="row breadcrumbs-top">
                        <div class="col-12">
                            <div class="breadcrumb-wrapper col-12">
                                <ol class="breadcrumb rounded-pill breadcrumb-divider">
                                    <li class="breadcrumb-item">
                                        <a href="~/Home"><i class="bx bx-home-alt"></i></a>
                                    </li>

                                    <li class="breadcrumb-item active">
                                        Product Planlar
                                    </li>

                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="content-body">
                <!-- users list start -->
                <section class="invoice-list-wrapper">
                    @if (changePermit)
                    {
                        <div class="invoice-create-btn mb-1">
                            <a href="@Url.Action("Create", "ProductPlan")" class="btn btn-success bg-light invoice-create" role="button" aria-pressed="true">
                                Yangi
                                plan qo'shish
                            </a>
                        </div>
                    }
                    <div class="col-md-12 col-sm-12">
                        <div class="card">
                            <div class="card-content">
                                <div class="card-body">
                                    <!-- datatable start -->
                                    <div class="card-datatable table-responsivetable-responsive">
                                        <table class="table dt-responsive nowrap" style="width:100%">
                                            <thead>
                                                <tr>
                                                    <th>Rejadagi mahsulot miqdori</th>
                                                    <th>Label</th>
                                                    <th>Boshlanish vaqti</th>
                                                    <th>Tugash vaqti</th>
                                                    @if (changePermit)
                                                    {
                                                        <th>amallar</th>
                                                    }
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td><a href="~/ProductPlan/Details/@item.ID">@item.PlannedQty</a></td>
                                                        <td>
                                                            <a href="~/ProductPlan/Details/@item.ID">@item.Label</a>
                                                        </td>
                                                        <td>@item.IssueDate</td>
                                                        <td>@item.DueDate</td>

                                                        @if (changePermit)
                                                        {
                                                            <td>
                                                                <div>
                                                                    <a href="@Url.Action("Edit", "ProductPlan", new { id = item.ID })"><i class="bx bx-edit-alt"></i></a>
                                                                    <a href="@Url.Action("Delete", "ProductPlan", new { id = item.ID })"><i class="bx bx-trash"></i></a>
                                                                </div>
                                                            </td>
                                                        }
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                    <!-- datatable ends -->
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
}
else
{
    Response.Redirect(Url.Action("Index", "ViewNotAuthorized"));
}