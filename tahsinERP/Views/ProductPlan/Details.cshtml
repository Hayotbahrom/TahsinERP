@model tahsinERP.Models.PRODUCTPLAN
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (tahsinERP.Models.RoleHelper.IsViewPermitted(User.Identity.Name, ViewContext.RouteData.Values["controller"].ToString(), ViewContext.RouteData.Values["action"].ToString()))
{
    <div class="app-content content">
        <div class="content-overlay"></div>
        <div class="content-wrapper">
            <div class="content-header row">
                <div class="content-header-left col-12 mb-2 mt-1">
                    <div class="row breadcrumbs-top">
                        <div class="col-12">
                            <div class="breadcrumb-wrapper col-12">
                                <ol class="breadcrumb rounded-pill breadcrumb-divider">
                                    <li class="breadcrumb-item">
                                        <a href="~/Home"><i class="bx bx-home-alt"></i></a>
                                    </li>
                                    <li class="breadcrumb-item">
                                        <a href="~/ProductPlan/Index">Product Plans</a>
                                    </li>
                                    <li class="breadcrumb-item active">
                                        Rejadagi mahsulot malumotlari
                                    </li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="content-body">
                <!-- app invoice View Page -->
                <section class="invoice-edit-wrapper">
                    <div class="row">
                        <!-- invoice view page -->
                        <div class="col-xl-9 col-md-8 col-12">
                            <div class="card">
                                <div class="card-content">
                                    <div class="card-body pb-0 mx-25">
                                        <div class="row invoice-info">
                                            <div class="col-lg-12 col-md-6 mt-25">
                                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                <hr>
                                                <h6 class="invoice-to">Maxsulot raqami</h6>
                                                <fieldset class="invoice-address form-group">
                                                    @Html.DisplayFor(model => model.PRODUCT.PNo, new { @class = "form-control" })
                                                </fieldset>
                                                <h6 class="invoice-to">Maxsulot nomi</h6>
                                                <fieldset class="invoice-address form-group">
                                                    @Html.DisplayFor(model => model.PRODUCT.Name, new { @class = "form-control" })
                                                </fieldset>
                                                <h6 class="invoice-to">Boshlanish sanasi</h6>
                                                <fieldset class="invoice-address form-group">
                                                    @Model.StartDate.ToString("yyyy-MM-dd")
                                                </fieldset>
                                                <h6 class="invoice-to">Tugash sanasi</h6>
                                                <fieldset class="invoice-address form-group">
                                                    @Model.DueDate.ToString("yyyy-MM-dd")
                                                </fieldset>
                                                <h6 class="invoice-to">Mahsulotni rejadagi miqdori</h6>
                                                <fieldset class="invoice-address form-group">
                                                    @Html.DisplayFor(model => model.Amount, new { @class = "form-control" })
                                                </fieldset>
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="table-responsive">
                                            <table class="table table-striped dataex-html5-selectors">
                                                <thead>
                                                    <tr>
                                                        <th>Kun</th>
                                                        <th>Kunduzgi reja</th>
                                                        <th>Tungi reja</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in ViewBag.dailyPlan)
                                                    {
                                                        <tr>
                                                            <td>
                                                                @item.Day.ToString("yyyy-MM-dd")
                                                            </td>
                                                            <td>
                                                                @item.DayShift
                                                            </td>
                                                            <td>
                                                                @item.NightShift
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
}
else
{
    Response.Redirect(Url.Action("Index", "ViewNotAuthorized"));
}
