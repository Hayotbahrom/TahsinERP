
@model tahsinERP.ViewModels.CreateAvtoViewModel

@{
    ViewBag.Title = "CreateAvto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (tahsinERP.Models.RoleHelper.IsChangePermitted(User.Identity.Name, ViewContext.RouteData.Values["controller"].ToString(), ViewContext.RouteData.Values["action"].ToString()))
{
    using (Html.BeginForm("CreateAvto", "ProductPlan", FormMethod.Post, new { enctype = "multipart/form-data" }))  // Ensure enctype is set
    {
        <div class="app-content content">
            <div class="content-overlay"></div>
            <div class="content-wrapper">
                <div class="content-header row">
                    <div class="content-header-left col-12 mb-2 mt-1">
                        <div class="row breadcrumbs-top">
                            <div class="col-12">
                                <div class="breadcrumb-wrapper col-12">
                                    <ol class="breadcrumb rounded-pill breadcrumb-divider">
                                        <li class="breadcrumb-item">
                                            <a href="~/Home"><i class="bx bx-home-alt"></i></a>
                                        </li>
                                        <li class="breadcrumb-item">
                                            <a href="~/ProductPlan/Index">Maxsulot rejalari</a>
                                        </li>
                                        <li class="breadcrumb-item active">
                                            Yangi maxsulot reja qo'shish
                                        </li>
                                    </ol>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="content-body">
                    <section class="basic-select2">
                        <div class="row">
                            <div class="col-xl-9 col-md-8 col-12">
                                <div class="card">
                                    <div class="card-content">
                                        <div class="card-body pb-0 mx-25">
                                            <div class="row">
                                                <div class="col-lg-12 col-md-6 mt-25">
                                                    @Html.AntiForgeryToken()
                                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                    <hr>
                                                    <h6 class="invoice-to">Modelni tanlang</h6>
                                                    
                                                    <fieldset class="invoice-to form-check">
                                                        @Html.DropDownListFor(model => model.Model, ViewBag.models as SelectList, new { @class = "form-control select2" })
                                                        @Html.ValidationMessageFor(model => model.Model, "", new { @class = "text-danger" })
                                                    </fieldset>

                                                    <h6 class="invoice-to">Optionni tanlang</h6>
                                                    <fieldset class="invoice-to form-check">
                                                        @Html.DropDownListFor(model => model.Option, ViewBag.models as SelectList, new { @class = "form-control select2" })
                                                        @Html.ValidationMessageFor(model => model.Option, "", new { @class = "text-danger" })
                                                    </fieldset>
                                                    
                                                    <h6 class="invoice-to">Reja kiriting</h6>
                                                    <fieldset class="form-group">
                                                        @Html.TextBoxFor(model => model.Reja, new { @class = "form-control round" })
                                                        @Html.ValidationMessageFor(model => model.Reja, "", new { @class = "text-danger" })
                                                    </fieldset>
                                                    <h6 class="invoice-to">Oy</h6>
                                                    <fieldset class="invoice-address form-group">
                                                        @Html.TextBoxFor(model => model.Month, new { @class = "form-control round" })
                                                        @Html.ValidationMessageFor(model => model.Month, "", new { @class = "text-danger" })
                                                    </fieldset>

                                                    <ul class="list-group list-group-flush">
                                                        <li class="list-group-item border-0 pb-0">
                                                            <button class="btn btn-primary btn-block subtotal-preview-btn" name="create" type="submit" value="Create">
                                                                <i class='bx bx-save'></i>
                                                                Saqlash
                                                            </button>
                                                        </li>
                                                    </ul>
                                                    </div>
                                                </div>
                                            <hr>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    }
}
else
{
    Response.Redirect(Url.Action("Index", "ViewNotAuthorized"));
}

