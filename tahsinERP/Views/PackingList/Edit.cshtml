@model tahsinERP.Models.P_INVOICE_PACKINGLISTS
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (tahsinERP.Models.RoleHelper.IsChangePermitted(User.Identity.Name, "PackingList"))
{
    using (Html.BeginForm("Edit", "PackingList", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="app-content content">
            <div class="content-overlay"></div>
            <div class="content-wrapper">
                <div class="content-header row">
                    <div class="content-header-left col-12 mb-2 mt-1">
                        <div class="row breadcrumbs-top">
                            <div class="col-12">
                                <div class="breadcrumb-wrapper col-12">
                                    <ol class="breadcrumb rounded-pill breadcrumb-divider">
                                        <li class="breadcrumb-item">
                                            <a href="~/Home"><i class="bx bx-home-alt"></i></a>
                                        </li>
                                        <li class="breadcrumb-item">
                                            <a href="~/PackingList/Index">PackingList lar</a>
                                        </li>
                                        <li class="breadcrumb-item active">
                                            Packinglist sahifasi
                                        </li>
                                    </ol>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="content-body">
                    <div class="row">
                        <!-- invoice view page -->
                        <div class="col-xl-9 col-md-8 col-12">
                            <div class="card">
                                <div class="card-content">

                                    <div class="card-body pb-0 mx-25">
                                        @Html.AntiForgeryToken()
                                        <div class="row">
                                            <h4 class="text-primary">PackingList malumotlarini tahrirlash</h4>

                                            <div class="col-lg-12 col-md-6 mt-25">
                                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                <hr>
                                                <h6 class="invoice-to">Packing List raqami</h6>
                                                <fieldset class="invoice-address form-group">
                                                    @Html.TextBoxFor(model => model.PackingListNo, new { @class = "form-control round", @placeholder = "Buyurtma raqami" })
                                                    @Html.ValidationMessageFor(model => model.PackingListNo, "", new { @class = "text-danger" })
                                                </fieldset>

                                                <h6 class="invoice-to">Invoice raqami</h6>
                                                <fieldset class="invoice-address form-group">
                                                    @Html.DropDownListFor(model => model.InvoiceID, ViewBag.Invoice as SelectList, new { @class = "form-control select2" })
                                                    @Html.ValidationMessageFor(model => model.InvoiceID, "", new { @class = "text-danger" })
                                                </fieldset>

                                                <h6 class="invoice-to">Detall nomi</h6>
                                                <fieldset class="invoice-address form-group">
                                                    @Html.DropDownListFor(model => model.PartID, ViewBag.Part as SelectList, new { @class = "form-control select2" })
                                                    @Html.ValidationMessageFor(model => model.PartID, "", new { @class = "text-danger" })
                                                </fieldset>
                                                <h6 class="invoice-to">Pallet turi </h6>
                                                <fieldset class="invoice-address form-group">
                                                    @Html.TextBoxFor(model => model.PltType, new { @class = "form-control round", @placeholder = "PltType" })
                                                    @Html.ValidationMessageFor(model => model.PltType, "", new { @class = "text-danger" })
                                                </fieldset>
                                                <div class="row">
                                                    <div class="col-12 col-sm-6">
                                                        <h6 class="invoice-to">Birinchi uzunligi</h6>
                                                        <fieldset class="invoice-address form-group">
                                                            @Html.TextBoxFor(model => model.PrLength, new { @class = "form-control round", @placeholder = "PrLenth" })
                                                            @Html.ValidationMessageFor(model => model.PrLength, "", new { @class = "text-danger" })
                                                        </fieldset>
                                                        <h6 class="invoice-to">Birinchi kengligi</h6>
                                                        <fieldset class="invoice-address form-group">
                                                            @Html.TextBoxFor(model => model.PrWidth, new { @class = "form-control round", @placeholder = "PrWidth" })
                                                            @Html.ValidationMessageFor(model => model.PrWidth, "", new { @class = "text-danger" })
                                                        </fieldset>
                                                        <h6 class="invoice-to">Birinchi balandligi</h6>
                                                        <fieldset class="invoice-address form-group">
                                                            @Html.TextBoxFor(model => model.PrHeight, new { @class = "form-control round", @placeholder = "PrHeight" })
                                                            @Html.ValidationMessageFor(model => model.PrHeight, "", new { @class = "text-danger" })
                                                        </fieldset>
                                                        <h6 class="invoice-to">Umumiy vazni </h6>
                                                        <fieldset class="invoice-address form-group">
                                                            @Html.TextBoxFor(model => model.PrGrWeight, new { @class = "form-control round", @placeholder = "PrGrWeight" })
                                                            @Html.ValidationMessageFor(model => model.PrGrWeight, "", new { @class = "text-danger" })
                                                        </fieldset>
                                                        <h6 class="invoice-to">Qadoqlash material </h6>
                                                        <fieldset class="invoice-address form-group">
                                                            @Html.TextBoxFor(model => model.PrPackMaterial, new { @class = "form-control round", @placeholder = "PrPackMaterial" })
                                                            @Html.ValidationMessageFor(model => model.PrPackMaterial, "", new { @class = "text-danger" })
                                                        </fieldset>

                                                    </div>
                                                    <div class="col-12 col-sm-6">
                                                        <h6 class="invoice-to">Ikkinchi uzunligi</h6>
                                                        <fieldset class="invoice-address form-group">
                                                            @Html.TextBoxFor(model => model.ScLength, new { @class = "form-control round", @placeholder = "ScLenth" })
                                                            @Html.ValidationMessageFor(model => model.PrLength, "", new { @class = "text-danger" })
                                                        </fieldset>
                                                        <h6 class="invoice-to">Ikkinchi kengligi</h6>
                                                        <fieldset class="invoice-address form-group">
                                                            @Html.TextBoxFor(model => model.ScWidth, new { @class = "form-control round", @placeholder = "ScWidth" })
                                                            @Html.ValidationMessageFor(model => model.PrWidth, "", new { @class = "text-danger" })
                                                        </fieldset>
                                                        <h6 class="invoice-to">Ikkinchi balandligi</h6>
                                                        <fieldset class="invoice-address form-group">
                                                            @Html.TextBoxFor(model => model.ScHeight, new { @class = "form-control round", @placeholder = "ScHeight" })
                                                            @Html.ValidationMessageFor(model => model.ScHeight, "", new { @class = "text-danger" })
                                                        </fieldset>
                                                        <h6 class="invoice-to">Ikkinchi Umumiy vazni </h6>
                                                        <fieldset class="invoice-address form-group">
                                                            @Html.TextBoxFor(model => model.ScGrWeight, new { @class = "form-control round", @placeholder = "ScGrWeight" })
                                                            @Html.ValidationMessageFor(model => model.PrGrWeight, "", new { @class = "text-danger" })
                                                        </fieldset>
                                                        <h6 class="invoice-to">Ikkinchi Qadoqlash material </h6>
                                                        <fieldset class="invoice-address form-group">
                                                            @Html.TextBoxFor(model => model.ScPackMaterial, new { @class = "form-control round", @placeholder = "ScPackMaterial" })
                                                            @Html.ValidationMessageFor(model => model.ScPackMaterial, "", new { @class = "text-danger" })
                                                        </fieldset>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                                <ul class="list-group list-group-flush">
                                                    <li class="list-group-item border-0 pb-0">
                                                        <button class="btn btn-primary btn-block subtotal-preview-btn" name="edit" type="submit" value="Edit">
                                                            <i class='bx bx-save'></i>
                                                            Saqlash
                                                        </button>
                                                    </li>
                                                </ul>

                                                <hr>
                                            </div>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        }
    }
else
{
    Response.Redirect(Url.Action("Index", "ViewNotAuthorized"));
}
