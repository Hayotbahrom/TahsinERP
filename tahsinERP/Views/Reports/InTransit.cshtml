@{
    ViewBag.Title = "InTransit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (!tahsinERP.Models.RoleHelper.IsViewPermitted(User.Identity.Name, ViewContext.RouteData.Values["controller"].ToString(), ViewContext.RouteData.Values["action"].ToString()))
{
    bool changePermit = false;
    if (tahsinERP.Models.RoleHelper.IsChangePermitted(User.Identity.Name, ViewContext.RouteData.Values["controller"].ToString(), ViewContext.RouteData.Values["action"].ToString()))
    {
        changePermit = true;
    }

    <div class="app-content content">
        <div class="content-overlay"></div>
        <div class="content-wrapper">
            <div class="content-header row">
                <div class="content-header-left col-12 mb-2 mt-1">
                    <div class="row breadcrumbs-top">
                        <div class="col-12">
                            <div class="breadcrumb-wrapper col-12">
                                <ol class="breadcrumb rounded-pill breadcrumb-divider">
                                    <li class="breadcrumb-item">
                                        <a href="~/Home"><i class="bx bx-home-alt"></i></a>
                                    </li>
                                    <li class="breadcrumb-item ">
                                        Xisobotlar
                                    </li>
                                    <li class="breadcrumb-item active">
                                        Yo'lda
                                    </li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="content-body">
                <!-- users list start -->
                <section class="invoice-list-wrapper">
                    <div class="col-md-12 col-sm-12">
                        <div class="card">
                            <div class="card-content">
                                <div class="card-body">
                                     <div class="col-md-4 col-sm-8" style="float: right;">
                                        <div class="form-group">
                                            <label for="startDate">Dan:</label>
                                            @Html.TextBox("startDate", null, new { @class = "form-control datetimepicker round", @id = "startDate", @placeholder = "Boshlanish sanasi", @required = "required", @type = "date" })
                                        </div>
                                        <div class="form-group">
                                            <label for="endDate">Gacha:</label>
                                            @Html.TextBox("endDate", null, new { @class = "form-control datetimepicker round", @id = "endDate", @placeholder = "Tugash sanasi", @required = "required", @type = "date" })
                                        </div>

                                        <button class="btn btn-success" style="float: right;" onclick="sendDate()">
                                            Hisoblash
                                        </button>
                                    </div>

                                    <!-- datatable start -->
                                    <div class="table-responsive table-responsivetable-responsive">
                                        @*<table id="myDataTable" class="table table-striped table-bordered complex-headers dataex-html5-selector" style="width:100%">*@
                                        <table class="table table-striped table-bordered dataex-html5-selectors" id="myDataTable" style="width:100%">
                                            <thead>
                                                @*<tr>
                                                    @{
                                                        int countCol = 0;
                                                    }
                                                    @foreach (var col in ViewBag.DataTable.Columns)
                                                    {
                                                        if (countCol >= 1)
                                                        {
                                                            <th class="rotate-45-inverse" style="padding: 40px 0px; margin: 0px !important;">@col.ColumnName</th>
                                                        }
                                                        else
                                                        {
                                                            <th>@col.ColumnName</th>

                                                        }
                                                        countCol += 1;
                                                    }
                                                </tr>*@
                                                <tr>
                                                    @foreach (var col in ViewBag.DataTable.Columns)
                                                    {
                                                        <th>@col.ColumnName</th>
                                                    }
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var row in ViewBag.DataTable.Rows)
                                                {
                                                    int countRow = 0;
                                                    <tr>
                                                        @foreach (var item in row.ItemArray)
                                                        {
                                                            // Convert item to string and then to integer if possible
                                                            int number;
                                                            string displayText = item.ToString();
                                                            string cellClass = "";

                                                            // Try converting the item to an integer
                                                            if (int.TryParse(displayText, out number))
                                                            {
                                                                // Apply conditional formatting based on integer value
                                                                if (number <= 0 && countRow >= 1)
                                                                {
                                                                    cellClass = "text-danger";
                                                                }
                                                                else if (number >= 1 && countRow >= 1)
                                                                {
                                                                    cellClass = "text-success";
                                                                }
                                                                else
                                                                {
                                                                    cellClass = "text-bold-700";
                                                                }

                                                                displayText = number.ToString(); // Update display text with the integer value
                                                            }
                                                            countRow += 1;

                                                            <td class="@cellClass">@displayText</td>
                                                        }
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                    <!-- datatable ends -->
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <!-- users list ends -->
            </div>
        </div>
    </div>
}
else
{
    Response.Redirect(Url.Action("Index", "ViewNotAuthorized"));
}


<script type="text/javascript">
    function sendDate() {
        var startDate = document.getElementById("startDate").value;
        var endDate = document.getElementById("endDate").value;

        $.ajax({
            url: '@Url.Action("InTransit", "Reports")',
            type: 'GET',
            data: {
                startDate: startDate,
                endDate: endDate
            },
            success: function(response) {
                console.log("Ishladi, InTransit");
            },
            error: function(xhr, status, error) {
                console.error("Error fetching data:", error);
            }
        });
    }
</script>