@model tahsinERP.ViewModels.SContractViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (tahsinERP.Models.RoleHelper.IsChangePermitted(User.Identity.Name, "SContract"))
{
    <div class="app-content content">
        <div class="content-overlay"></div>
        <div class="content-wrapper">
            <div class="content-header row">
                <div class="content-header-left col-12 mb-2 mt-1">
                    <div class="row breadcrumbs-top">
                        <div class="col-12">
                            <div class="breadcrumb-wrapper col-12">
                                <ol class="breadcrumb rounded-pill breadcrumb-divider">
                                    <li class="breadcrumb-item">
                                        <a href="~/Home"><i class="bx bx-home-alt"></i></a>
                                    </li>
                                    <li class="breadcrumb-item">
                                        <a href="~/WhIncome/Index">Kirimlar</a>
                                    </li>
                                    <li class="breadcrumb-item active">
                                        Kirim qilish
                                    </li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="content-body">
                <section id="form-repeater-wrapper">
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title">
                                        Contract
                                    </h4>
                                </div>
                                <div class="card-content">
                                    <div class="card-body">
                                        @using (Html.BeginForm("Create", "SContract", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form repeater-default" }))
                                        {
                                            @Html.AntiForgeryToken()

                                            // ContractViewModel
                                            <div class="row justify-content-around d-flex align-items-start">
                                                @*Left Part*@
                                                <div class="col-lg-6 col-sm-12">
                                                    <div class="row">
                                                        <div class="col-md-6 col-12 form-group">
                                                            <label for="ContractNo">Contract No</label>
                                                            @Html.TextBoxFor(model => model.ContractNo, new { @type = "text", @class = "form-control", @id = "ContractNo", @placeholder = "Contract No kiriting" })
                                                        </div>
                                                        <div class="col-md-6 col-12 form-group">
                                                            <label for="CustomerID">Customer</label>
                                                            @Html.DropDownListFor(model => model.CustomerID, (SelectList)ViewBag.Customers, new { @id = "CustomerID", @class = "form-control" })
                                                            @Html.ValidationMessageFor(model => model.CustomerID, "", new { @class = "text-danger" })
                                                        </div>
                                                        <div class="col-md-6 col-12 form-group">
                                                            <label for="Currency">Currency</label>
                                                            @Html.TextBoxFor(model => model.Currency, new { @type = "text", @class = "form-control", @id = "Currency", @placeholder = "Currencyni kiriting" })
                                                        </div>
                                                        <div class="col-md-6 col-12 form-group">
                                                            <label for="Amount">Amount</label>
                                                            @Html.TextBoxFor(model => model.Amount, new { @type = "text", @class = "form-control", @id = "Amount", @placeholder = "Amountni kiriting" })
                                                        </div>
                                                        <div class="col-md-6 col-12 form-group">
                                                            <label for="Incoterms">Incoterms</label>
                                                            @Html.TextBoxFor(model => model.Incoterms, new { @type = "text", @class = "form-control", @id = "Incoterms", @placeholder = "Incoterms kiriting" })
                                                        </div>
                                                        <div class="col-md-6 col-12 form-group">
                                                            <label for="PaymentTerms">Payment Terms</label>
                                                            @Html.TextBoxFor(model => model.PaymentTerms, new { @type = "text", @class = "form-control", @id = "PaymentTerms", @placeholder = "Payment Terms kiriting" })
                                                        </div>
                                                        <div class="col-md-6 col-12 form-group">
                                                            <label for="IssuedDate">Issued Date</label>
                                                            @Html.EditorFor(model => model.IssuedDate, new { htmlAttributes = new { @id = "IssuedDate", @class = "form-control pickadate-months-year " } })
                                                            @Html.ValidationMessageFor(model => model.IssuedDate, "", new { @class = "text-danger" })
                                                        </div>
                                                        <div class="col-md-6 col-12 form-group">
                                                            <label for="DueDate">Due Date</label>
                                                            @Html.EditorFor(model => model.DueDate, new { htmlAttributes = new { @id = "DueDate", @class = "form-control pickadate-months-year " } })
                                                            @Html.ValidationMessageFor(model => model.DueDate, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            // ContractProductViewModel
                                            <br />
                                            <h4>
                                                Products
                                            </h4>
                                            <div data-repeater-list="ContractProducts">
                                                <div data-repeater-item>
                                                    <div class="row justify-content-between">
                                                        <div class="col-md-6 col-12 form-group">
                                                            <label for="Unit">Contract</label>
                                                            @Html.TextBoxFor(model => model.ContractNo, "", new { @type = "text", @class = "form-control", @placeholder = "ContractNo kiriting" })
                                                        </div>
                                                        <div class="col-md-2 col-sm-12 form-group">
                                                            <label for="ProductID">Customer</label>
                                                            @Html.DropDownListFor(model => model.CustomerID, (SelectList)ViewBag.Customers, new { @class = "form-control" })
                                                            @Html.ValidationMessageFor(model => model.CustomerID, "", new { @class = "text-danger" })
                                                        </div>
                                                        <div class="col-md-2 col-sm-12 form-group">
                                                            <label for="Unit">Currency</label>
                                                            @Html.TextBoxFor(model => model.Currency, null, new { @type = "text", @class = "form-control", @placeholder = "Currency kiriting" })
                                                        </div>
                                                        <div class="col-md-2 col-sm-12 form-group">
                                                            <label for="Amount">Amount</label>
                                                            @Html.TextBox("ContractProducts[0].Amount", null, new { @type = "text", @class = "form-control", @placeholder = "Amount kiriting" })
                                                        </div>
                                                        <div class="col-md-2 col-sm-12 form-group">
                                                            <label for="PiecePrice">Piece Price</label>
                                                            @Html.TextBox("ContractProducts[0].PiecePrice", null, new { @type = "text", @class = "form-control", @placeholder = "Piece Price kiriting" })
                                                        </div>
                                                        <div class="col-md-1 col-sm-12 form-group d-flex align-items-center pt-2">
                                                            <button data-repeater-delete type="button" class="btn btn-danger">Delete</button>
                                                        </div>
                                                    </div>
                                                    <hr>
                                                </div>
                                            </div>
                                            <button data-repeater-create type="button" class="btn btn-primary">Add New Product</button>


                                            // SContract_Products
                                            <br />
                                            <h4>
                                                Products
                                            </h4>
                                            <div data-repeater-list="Products">
                                                <div data-repeater-item>
                                                    <div class="row justify-content-between">
                                                        <div class="col-md-2 col-sm-12 form-group">
                                                            <label for="Part_IncomeID">IncomeID</label>
                                                            @Html.DropDownList("Parts[0].Part_IncomeID", (SelectList)ViewBag.InComes, new { @class = "form-control" })
                                                            @Html.ValidationMessage("Parts[0].Part_IncomeID", "", new { @class = "text-danger" })
                                                        </div>
                                                        <div class="col-md-2 col-sm-12 form-group">
                                                            <label for="Part_PartID">PartID</label>
                                                            @Html.DropDownList("Parts[0].Part_PartID", (SelectList)ViewBag.InComeParts, new { @class = "form-control" })
                                                            @Html.ValidationMessage("Parts[0].Part_PartID", "", new { @class = "text-danger" })
                                                        </div>
                                                        <div class="col-md-2 col-sm-12 form-group">
                                                            <label for="Part_Unit">Unit</label>
                                                            @Html.TextBox("Parts[0].Part_Unit", null, new { @type = "text", @class = "form-control", @placeholder = "Unitni kiriting" })
                                                        </div>
                                                        <div class="col-md-2 col-sm-12 form-group">
                                                            <label for="Part_Amount">Amount</label>
                                                            @Html.TextBox("Parts[0].Part_Amount", null, new { @type = "text", @class = "form-control", @placeholder = "Amountni kiriting" })
                                                        </div>
                                                        <div class="col-md-2 col-sm-12 form-group">
                                                            <label for="Part_PiecePrice">Piece Price</label>
                                                            @Html.TextBox("Parts[0].Part_PiecePrice", null, new { @type = "text", @class = "form-control", @placeholder = "Piece Priceni kiriting" })
                                                        </div>
                                                        <div class="col-md-2 col-sm-12 form-group">
                                                            <label for="Part_TotalPrice">Total Price</label>
                                                            @Html.TextBox("Parts[0].Part_TotalPrice", null, new { @type = "text", @class = "form-control", @placeholder = "Total Priceni kiriting" })
                                                        </div>
                                                        <div class="col-md-2 col-sm-12 form-group">
                                                            <label for="Part_Comment">Comment</label>
                                                            @Html.TextBox("Parts[0].Part_Comment", null, new { @type = "text", @class = "form-control", @placeholder = "Commentni kiriting" })
                                                        </div>
                                                        <div class="col-md-1 col-sm-12 form-group d-flex align-items-center pt-2">
                                                            <button data-repeater-delete type="button" class="btn btn-danger">Delete</button>
                                                        </div>
                                                    </div>
                                                    <hr>
                                                </div>
                                            </div>
                                            <button data-repeater-create type="button" class="btn btn-primary">Add New Part</button>



                                            // Save button
                                            <ul class="list-group list-group-flush">
                                                <li class="list-group-item border-0 pb-0">
                                                    <button class="btn btn-primary btn-block subtotal-preview-btn" name="create" type="submit" value="Create">
                                                        <i class='bx bx-save'></i>
                                                        Saqlash
                                                    </button>
                                                </li>
                                            </ul>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
}
else
{
    Response.Redirect(Url.Action("Index", "ViewNotAuthorized"));
}
