@*@model tahsinERP.ViewModels.PartViewModel*@
@model tahsinERP.Models.S_CONTRACTS

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (tahsinERP.Models.RoleHelper.IsChangePermitted(User.Identity.Name, ViewContext.RouteData.Values["controller"].ToString(), ViewContext.RouteData.Values["action"].ToString()))
{
    using (Html.BeginForm("Create", "SContract", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {

        @Html.AntiForgeryToken()

        <div class="app-content content">
            <div class="content-overlay"></div>
            <div class="content-wrapper">
                <div class="content-header row">
                    <div class="content-header-left col-12 mb-2 mt-1">
                        <div class="row breadcrumbs-top">
                            <div class="col-12">
                                <div class="breadcrumb-wrapper col-12">
                                    <ol class="breadcrumb rounded-pill breadcrumb-divider">
                                        <li class="breadcrumb-item">
                                            <a href="~/Home/Index"><i class="bx bx-home-alt"></i></a>
                                        </li>
                                        <li class="breadcrumb-item">
                                            <a href="~/Part/Index">Ehtiyot qismlar</a>
                                        </li>
                                        <li class="breadcrumb-item active">
                                            Yangi ehtiyot qism qo'shish
                                        </li>
                                    </ol>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="content-body">
                    <!-- app invoice View Page -->
                    <section class="basic-select2">
                        <div class="row">
                            <!-- invoice view page -->
                            <div class="col-xl-9 col-md-8 col-12">
                                <div class="card">
                                    <div class="card-content">
                                        <div class="card-body pb-0 mx-25">

                                            <div class="row">
                                                <div class="col-lg-12 col-md-6 mt-25">
                                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                    <hr>
                                                    <h6 class="invoice-to">Kontrakt raqami</h6>
                                                    <fieldset class="invoice-address form-group">
                                                        @Html.TextBoxFor(model => model.ContractNo, new { @class = "form-control", @placeholder = "Kontrakt raqamini kiriting" })
                                                        @Html.ValidationMessageFor(model => model.ContractNo, "", new { @class = "text-danger" })
                                                    </fieldset>
                                                    <h6 class="invoice-to">Valyuta birligi</h6>
                                                    <fieldset class="invoice-address form-group">
                                                        @Html.TextBoxFor(model => model.Currency, new { @class = "form-control", @placeholder = "Valyuta birligini kiriting" })
                                                        @Html.ValidationMessageFor(model => model.Currency, "", new { @class = "text-danger" })
                                                    </fieldset>
                                                    <h6 class="invoice-to">Miqdori</h6>
                                                    <fieldset class="invoice-address form-group">
                                                        @Html.TextBoxFor(model => model.Amount, new { @class = "form-control", @placeholder = "Miqdorini kiriting" })
                                                        @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
                                                    </fieldset>
                                                    <h6 class="invoice-to">Ehtiyot qism balandligi</h6>
                                                    <fieldset class="invoice-address form-group">
                                                        @Html.TextBoxFor(model => model.Incoterms, new { @class = "form-control", @placeholder = "Balandligini kiriting" })
                                                        @Html.ValidationMessageFor(model => model.Incoterms, "", new { @class = "text-danger" })
                                                    </fieldset>
                                                    <h6 class="invoice-to">To'lov shartlari</h6>
                                                    <fieldset class="invoice-address form-group">
                                                        @Html.TextBoxFor(model => model.PaymentTerms, new { @class = "form-control", @placeholder = "To'lov shartlarini kiriting" })
                                                        @Html.ValidationMessageFor(model => model.PaymentTerms, "", new { @class = "text-danger" })
                                                    </fieldset>
                                                    <h6 class="invoice-to">Xaridorni biriktirish</h6>
                                                    <fieldset class="invoice-address form-group">
                                                        @Html.DropDownList("CustomerID", (SelectList)ViewBag.Customers, "Xaridorni biriktirish", new { @class = "form-control" })
                                                        @Html.ValidationMessageFor(model => model.CustomerID, "", new { @class = "text-danger" })
                                                    </fieldset>
                                                    <h6 class="invoice-to">Tuzilgan sana</h6>
                                                    <fieldset class="invoice-address form-group">
                                                        @Html.EditorFor(model => model.IssuedDate, new { htmlAttributes = new { @class = "form-control pickadate-months-year " } })
                                                        @Html.ValidationMessageFor(model => model.IssuedDate, "", new { @class = "text-danger" })
                                                    </fieldset>
                                                    <h6 class="invoice-to">Muddati tugaydigan sana </h6>
                                                    <fieldset class="invoice-address form-group">
                                                        @Html.EditorFor(model => model.DueDate, new { htmlAttributes = new { @class = "form-control pickadate-months-year " } })
                                                        @Html.ValidationMessageFor(model => model.DueDate, "", new { @class = "text-danger" })
                                                    </fieldset>

                                                    <ul class="list-group list-group-flush">
                                                        <li class="list-group-item border-0 pb-0">
                                                            <button class="btn btn-primary btn-block subtotal-preview-btn" name="create" type="submit" value="Create">
                                                                <i class='bx bx-save'></i>
                                                                Saqlash
                                                            </button>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                            <hr>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    }
}
else
{
    Response.Redirect(Url.Action("Index", "ViewNotAuthorized"));
}