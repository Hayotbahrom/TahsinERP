@model tahsinERP.ViewModels.UserViewModel
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}
<div class="app-content content">
    <div class="content-overlay"></div>
    <div class="content-wrapper">
        <div class="content-header row">
        </div>
        <div class="content-body">
            <!-- app invoice View Page -->
            <section class="invoice-edit-wrapper">
                <div class="row">
                    <!-- invoice view page -->
                    <div class="col-xl-9 col-md-8 col-12">
                        <div class="card">
                            <div class="card-content">
                                <div class="card-body pb-0 mx-25">
                                    <div class="row my-2 py-50">
                                        <div class="col-sm-6 col-12 order-2 order-sm-1">
                                            <h4 class="text-primary">Username</h4>
                                            <span><b>Username</b>: @Html.DisplayFor(model => model.UName, new { @class = "form-control"})</span>
                                            <h6 class="invoice-to">E-mail</h6>
                                            <fieldset class="invoice-address form-group">
                                                @Html.DisplayFor(model => model.Email, new { @class = "form-control"})
                                            </fieldset>
                                        </div>
                                        <div class="col-sm-6 col-12 order-1 order-sm-1 d-flex justify-content-end">
                                            <fieldset>
                                                <h4 class="text-primary">User photo</h4>
                                                <img alt="" src="@ViewBag.Base64String" style="height:150px;width:150px;" />
                                            </fieldset>
                                        </div>
                                        </div>
                                        <div class="row invoice-info">
                                            <div class="col-lg-12 col-md-6 mt-25">
                                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                <hr>
                                                <h6 class="invoice-to">Part name</h6>
                                                <fieldset class="invoice-address form-group">
                                                    @Html.DisplayFor(model => model.FullName, new { @class = "form-control"})
                                                </fieldset>
                                                <h6 class="invoice-to">Role</h6>
                                                <fieldset class="invoice-address form-group">
                                                    @Html.DropDownList("RoleID", null, htmlAttributes: new { @class = "form-control"})
                                                </fieldset>
                                                <h6>Activity</h6>
                                                <fieldset class="form-group">
                                                    @Html.DisplayFor(model => model.IsActive)
                                                    <span class="switch-label w-100">
                                                        Is active?
                                                    </span>
                                                </fieldset>
                                            </div>
                                        </div>
                                        <hr>
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>