@model List<tahsinERP.ViewModels.UserViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="app-content content">
    <div class="content-overlay"></div>
    <div class="content-wrapper">
        <div class="content-header row">
        </div>
        <div class="content-body">
            <!-- users list start -->
            <section class="invoice-list-wrapper">
                <div class="invoice-create-btn mb-1">
                    <a href="~/User/Create" class="btn btn-primary glow invoice-create" role="button" aria-pressed="true">
                        Add
                        User
                    </a>
                </div>
                <div class="users-list-filter px-1">
                    <form>
                        <div class="row border rounded py-2 mb-2">
                            <div class="col-12 col-sm-12 col-lg-4">
                                <label for="users-list-role">Role</label>
                                <fieldset class="form-group">
                                    @Html.DropDownList("RoleId", ViewBag.RoleList as SelectList, new { @class = "form-control", onchange = "refreshDataTable()" })
                                </fieldset>
                            </div>
                            <div class="col-1 col-sm-5 col-lg-1">
                                <label></label>
                                <fieldset class="form-group">
                                    <a href="@Url.Action("Index", "User", new { status = "InActive" })" role="link">inactive users</a>
                                </fieldset>
                            </div>
                            <div class="col-12 col-sm-12 col-lg-4 d-flex align-items-center">
                                <a href="~/User" class="btn btn-primary glow invoice-create" role="button" aria-pressed="true">
                                    Clear
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-md-12 col-sm-12">
                    <div class="card">
                        <div class="card-content">
                            <div class="card-body">
                                <!-- datatable start -->
                                <div class="table-responsive">
                                    <table class="table invoice-data-table dt-responsive nowrap" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th></th>
                                                <th></th>
                                                <th>username</th>
                                                <th>name</th>
                                                <th>email</th>
                                                <th>role</th>
                                                <th>status</th>
                                                <th>edit</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td></td>
                                                    <td></td>
                                                    <td>
                                                        <a href="~/User/Details/@item.ID">@item.UName</a>
                                                    </td>
                                                    <td>@item.FullName</td>
                                                    <td>@item.Email</td>
                                                    <td>@item.Role</td>
                                                    @if (item.IsActive)
                                                    {
                                                        <td><span class="badge badge-light-success">Active</span></td>
                                                    }
                                                    else
                                                    {
                                                        <td><span class="badge badge-light-danger">Inactive</span></td>
                                                    }
                                                    <td>
                                                        <div>
                                                            <a href="@Url.Action("Edit", "User", new { id = item.ID })"><i class="bx bx-edit-alt"></i></a>
                                                            <a href="@Url.Action("Delete", "User", new { id = item.ID })"><i class="bx bx-trash"></i></a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <!-- datatable ends -->
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- users list ends -->
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script type="text/javascript">
        function refreshDataTable() {
            const roleId = document.getElementById("RoleId").value;

            window.location.href = '@Url.Action("Index", "User")?roleID=' + roleId;
        }
</script>