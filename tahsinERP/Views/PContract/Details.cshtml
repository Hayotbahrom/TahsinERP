@model tahsinERP.Models.P_CONTRACTS
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (tahsinERP.Models.RoleHelper.IsViewPermitted(User.Identity.Name, "PContract"))
{

    <div class="app-content content">
        <div class="content-overlay"></div>
        <div class="content-wrapper">
            <div class="content-header row">
                <div class="content-header-left col-12 mb-2 mt-1">
                    <div class="row breadcrumbs-top">
                        <div class="col-12">
                            <div class="breadcrumb-wrapper col-12">
                                <ol class="breadcrumb rounded-pill breadcrumb-divider">
                                    <li class="breadcrumb-item">
                                        <a href="~/Home"><i class="bx bx-home-alt"></i></a>
                                    </li>
                                    <li class="breadcrumb-item">
                                        <a href="~/PContract/Index">Shartnomalar</a>
                                    </li>
                                    <li class="breadcrumb-item active">
                                        Shartnoma sahifasi
                                    </li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="content-body">
                <div class="row">
                    <!-- invoice view page -->
                    <div class="col-xl-9 col-md-8 col-12">
                        <div class="card">
                            <div class="card-content">
                                <div class="card-body pb-0 mx-25">
                                    <div class="row">
                                        <div class="col-lg-12 col-md-6 mt-25">
                                            <hr>
                                            <h6 class="invoice-to">Shartnoma raqami</h6>
                                            <fieldset class="invoice-address form-group">
                                                @Html.TextBoxFor(model => model.ContractNo, new { @class = "form-control round", @disabled = "disabled" })
                                            </fieldset>
                                            <h6 class="invoice-to">Ta'minotchi</h6>
                                            <fieldset class="invoice-address form-group">
                                                @Html.TextBoxFor(model => model.SUPPLIER.Name, new { @class = "form-control round", @disabled = "disabled" })
                                            </fieldset>
                                            <h6 class="invoice-to">Tuzilgan sanasi</h6>
                                            <fieldset class="form-group position-relative has-icon-left">
                                                @Html.TextBoxFor(model => model.IssuedDate, new { @class = "form-control pickadate-months-year round", @disabled = "disabled" })
                                                <div class="form-control-position">
                                                    <i class='bx bx-calendar'></i>
                                                </div>
                                            </fieldset>
                                            <h6 class="invoice-to">Tugaydigan sana</h6>
                                            <fieldset class="form-group position-relative has-icon-left">
                                                @Html.TextBoxFor(model => model.DueDate, new { @class = "form-control pickadate-months-year round", @disabled = "disabled" })
                                                <div class="form-control-position">
                                                    <i class='bx bx-calendar'></i>
                                                </div>
                                            </fieldset>
                                            <h6 class="invoice-to">Incoterms</h6>
                                            <fieldset class="invoice-address form-group">
                                                @Html.TextBoxFor(model => model.Incoterms, new { @class = "form-control round", @disabled = "disabled" })
                                            </fieldset>
                                            <h6 class="invoice-to">To'lov sharti</h6>
                                            <fieldset class="invoice-address form-group">
                                                @Html.TextBoxFor(model => model.PaymentTerms, new { @class = "form-control round", @disabled = "disabled" })
                                            </fieldset>


                                        </div>
                                    </div>
                                    <section id="column-selectors">
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="card">
                                                    <div class="card-header">
                                                        <h4 class="card-title">Shartnoma predmeti</h4>
                                                    </div>
                                                    <div class="card-content">
                                                        <div class="card-body card-dashboard">
                                                            <div class="table-responsive">
                                                                <table class="table table-striped dataex-html5-selectors" style="width:100%">
                                                                    <thead>
                                                                        <tr>
                                                                            <th>Detal raqami</th>
                                                                            <th>Detal nomi</th>
                                                                            <th>Dona narxi</th>
                                                                            <th>Valyuta</th>
                                                                            <th>O'lchov birligi</th>
                                                                            <th>Miqdori</th>
                                                                            <th>MOQ</th>
                                                                            <th>Maksimal imkoniyat</th>
                                                                        </tr>
                                                                    </thead>
                                                                    <tbody>
                                                                        @foreach (var item in ViewBag.partList)
                                                                        {
                                                                            <tr>
                                                                                <td>
                                                                                    <a href="~/Part/Details/@item.PartID">@item.PART.PNo</a>
                                                                                </td>
                                                                                <th>@item.PART.PName</th>
                                                                                <th>@item.Price</th>
                                                                                <th>@item.Currency</th>
                                                                                <th>@item.Unit</th>
                                                                                <th>@item.Amount</th>
                                                                                <th>@item.MOQ</th>
                                                                                <th>@item.MaximumCapacity</th>
                                                                            </tr>
                                                                        }
                                                                    </tbody>
                                                                </table>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </section>
                                    <hr>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}