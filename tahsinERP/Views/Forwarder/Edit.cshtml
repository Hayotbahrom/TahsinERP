@model tahsinERP.Models.FORWARDER
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (tahsinERP.Models.RoleHelper.IsChangePermitted(User.Identity.Name, ViewContext.RouteData.Values["controller"].ToString(), ViewContext.RouteData.Values["action"].ToString()))
{
    using (Html.BeginForm("Edit", "Forwarder", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="app-content content">
            <div class="content-overlay"></div>
            <div class="content-wrapper">
                <div class="content-header row">
                    <div class="content-header-left col-12 mb-2 mt-1">
                        <div class="row breadcrumbs-top">
                            <div class="col-12">
                                <div class="breadcrumb-wrapper col-12">
                                    <ol class="breadcrumb rounded-pill breadcrumb-divider">
                                        <li class="breadcrumb-item">
                                            <a href="~/Home"><i class="bx bx-home-alt"></i></a>
                                        </li>
                                        <li class="breadcrumb-item">
                                            <a href="~/Forwarder/Index">Forwarder lar</a>
                                        </li>
                                        <li class="breadcrumb-item active">
                                            Forwarder sahifasi
                                        </li>
                                    </ol>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="content-body">
                    <div class="row">
                        <!-- invoice view page -->
                        <div class="col-xl-9 col-md-8 col-12">
                            <div class="card">
                                <div class="card-content">

                                    <div class="card-body pb-0 mx-25">
                                        @Html.AntiForgeryToken()
                                        <div class="row">
                                            <h4 class="text-primary">Forwarder malumotlarini tahrirlash</h4>

                                            <div class="col-lg-12 col-md-6 mt-25">
                                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                <hr>
                                                <h4 class="text-primary">Forwarder nomi</h4>
                                                <fieldset class="invoice-address form-group">
                                                    @Html.TextBoxFor(model => model.ForwarderName, new { @class = "form-control round", @placeholder = "Forwarder ismi" })
                                                    @Html.ValidationMessageFor(model => model.ForwarderName, "", new { @class = "text-danger" })
                                                </fieldset>
                                                <h6 class="invoice-to">Direktor</h6>
                                                <fieldset class="invoice-address form-group">
                                                    @Html.TextBoxFor(model => model.Director, new { @class = "form-control round", @placeholder = "Direktor" })
                                                    @Html.ValidationMessageFor(model => model.Director, "", new { @class = "text-danger" })
                                                </fieldset>
                                                <br />
                                                <h6 class="invoice-to">Bog`lanish uchun shaxs</h6>
                                                <fieldset class="form-group">
                                                    @Html.TextBoxFor(model => model.ContactPerson, new { @class = "form-control round", @placeholder = "Bog`lanish uchun shaxs" })
                                                    @Html.ValidationMessageFor(model => model.ContactPerson, "", new { @class = "text-danger" })
                                                </fieldset>
                                                <br />
                                                <h6 class="invoice-to">Qisqacha bayoni</h6>
                                                <fieldset class="invoice-address form-group">
                                                    @Html.TextBoxFor(model => model.Description, new { @class = "form-control round", @placeholder = "tavsifi" })
                                                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                                </fieldset>
                                            </div>
                                        </div>

                                        <ul class="list-group list-group-flush">
                                            <li class="list-group-item border-0 pb-0">
                                                <button class="btn btn-primary btn-block subtotal-preview-btn" name="edit" type="submit" value="Edit">
                                                    <i class='bx bx-save'></i>
                                                    Saqlash
                                                </button>
                                            </li>
                                        </ul>

                                        <hr>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    Response.Redirect(Url.Action("Index", "ViewNotAuthorized"));
}
