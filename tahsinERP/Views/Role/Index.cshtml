@model List<tahsinERP.Models.ROLES>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}

<div class="app-content content">
    <div class="content-overlay"></div>
    <div class="content-wrapper">
        <div class="content-header row">
        </div>
        <div class="content-body">
            <!-- users list start -->
            <section class="invoice-list-wrapper">
                    <div class="invoice-create-btn mb-1">
                        <a href="@Url.Action("Create","Role")" class="btn btn-primary glow invoice-create" role="button" aria-pressed="true">
                            Add
                            Role
                        </a>
                    </div>
                <div class="col-md-12 col-sm-12">
                    <div class="card">
                        <div class="card-content">
                            <div class="card-body">
                                <!-- datatable start -->
                                <div class="card-datatable table-responsivetable-responsive">
                                    <table class="table invoice-data-table dt-responsive nowrap" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th></th>
                                                <th></th>
                                                <th>Role Nomi</th>
                                                <th>Batafsil</th>
                                                <th>edit</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td></td>
                                                    <td></td>
                                                    <td>
                                                        <a href="~/Role/Details/@item.ID">@item.RName</a>
                                                    </td>
                                                    <td>@item.Description</td>
                                                    <td>
                                                        <div>
                                                            <a href="@Url.Action("Edit", "Role", new { id = item.ID })"><i class="bx bx-edit-alt"></i></a>
                                                            <a href="@Url.Action("Delete","Role", new { id = item.ID })"><i class="bx bx-trash"></i></a>
                                                        </div>
                                                    </td>
                                                </tr>
                                             }
                                        </tbody>
                                    </table>
                                </div>
                                <!-- datatable ends -->
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- users list ends -->
        </div>
    </div>
</div>

