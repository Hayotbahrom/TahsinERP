@model tahsinERP.Models.F_WAYBILLS
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var type = ViewBag.Type;
}
@if (tahsinERP.Models.RoleHelper.IsViewPermitted(User.Identity.Name, ViewContext.RouteData.Values["controller"].ToString(), ViewContext.RouteData.Values["action"].ToString()))
{

    <div class="app-content content">
        <div class="content-overlay"></div>
        <div class="content-wrapper">
            <div class="content-header row">
                <div class="content-header-left col-12 mb-2 mt-1">
                    <div class="row breadcrumbs-top">
                        <div class="col-12">
                            <div class="breadcrumb-wrapper col-12">
                                <ol class="breadcrumb rounded-pill breadcrumb-divider">
                                    <li class="breadcrumb-item">
                                        <a href="~/Home"><i class="bx bx-home-alt"></i></a>
                                    </li>
                                    <li class="breadcrumb-item">
                                        <a href="~/Waybill/Index">Waybill lar</a>
                                    </li>
                                    <li class="breadcrumb-item active">
                                        Waybill sahifasi
                                    </li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="content-body">
                <div class="row">
                    <div class="col-xl-9 col-md-8 col-12">
                        <div class="card">
                            <div class="card-content">
                                <div class="card-body pb-0 mx-25">
                                    <div class="row">
                                        <div class="col-lg-12 col-md-6 mt-25">
                                            <h4 class="text-primary">Waybill  ma'lumotlari</h4>
                                            <hr />
                                            <span><b>Waybill raqami</b>: @Html.DisplayFor(model => model.WaybillNo, new { @class = "form-control" })</span>
                                            <hr />
                                            <span><b>Shartnoma raqami</b>:   @Model.F_CONTRACTS.ContractNo</span>
                                            <hr />
                                            <span><b>Transport turi</b>: @Html.DisplayFor(model => model.F_TRANSPORT_TYPES.TransportType, new { @class = "form-control" })</span>
                                            <hr />
                                            <span><b>Invoice</b>: @Html.DisplayFor(model => model.P_INVOICES.InvoiceNo, new { @class = "form-control" })</span>
                                            <hr />
                                            <span><b>PackingList</b>: @Html.DisplayFor(model => model.P_INVOICE_PACKINGLISTS.PackingListNo, new { @class = "form-control" })</span>
                                            <hr />
                                            <span><b>CBM</b>: @Html.DisplayFor(model => model.CBM, new { @class = "form-control" })</span>
                                            <hr />
                                            <span><b>Umumiy vazni</b>: @Html.DisplayFor(model => model.GrWeight, new { @class = "form-control" })</span>
                                            <hr />
                                        </div>
                                    </div>
                                    <hr>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    Response.Redirect(Url.Action("Index", "ViewNotAuthorized"));
}