@model tahsinERP.Models.F_WAYBILLS

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (tahsinERP.Models.RoleHelper.IsChangePermitted(User.Identity.Name, ViewContext.RouteData.Values["controller"].ToString(), ViewContext.RouteData.Values["action"].ToString()))
{
    using (Html.BeginForm("Create", "Waybill", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="app-content content">
            <div class="content-overlay"></div>
            <div class="content-wrapper">
                <div class="content-header row">
                    <div class="content-header-left col-12 mb-2 mt-1">
                        <div class="row breadcrumbs-top">
                            <div class="col-12">
                                <div class="breadcrumb-wrapper col-12">
                                    <ol class="breadcrumb rounded-pill breadcrumb-divider">
                                        <li class="breadcrumb-item">
                                            <a href="~/Home"><i class="bx bx-home-alt"></i></a>
                                        </li>
                                        <li class="breadcrumb-item">
                                            <a href="~/Waybill/Index">Waybill lar</a>
                                        </li>
                                        <li class="breadcrumb-item active">
                                            Yangi waybill qo'shish
                                        </li>
                                    </ol>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="content-body">
                    <section class="basic-select2">
                        <div class="row">
                            <div class="col-xl-9 col-md-8 col-12">
                                <div class="card">
                                    <div class="card-content">
                                        <div class="card-body pb-0 mx-25">
                                            <div class="row">
                                                <div class="col-lg-12 col-md-6 mt-25">
                                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                    <hr>
                                                    <h6 class="invoice-to">Waybill raqami</h6>
                                                    <fieldset class="invoice-address form-group">
                                                        @Html.TextBoxFor(model => model.WaybillNo, new { @class = "form-control round", @placeholder = "Waybill raqami" })
                                                        @Html.ValidationMessageFor(model => model.OrderNo, "", new { @class = "text-danger" })
                                                    </fieldset>

                                                    <h6 class="invoice-to">Transport turi</h6>
                                                    <fieldset class="invoice-address form-group">
                                                        @Html.DropDownListFor(model => model.TransportTypeID, ViewBag.TransportType as SelectList, new { @class = "form-control select2" })
                                                        @Html.ValidationMessageFor(model => model.TransportTypeID, "", new { @class = "text-danger" })
                                                    </fieldset>

                                                    <h6 class="invoice-to">Shartnoma raqami</h6>
                                                    <fieldset class="invoice-address form-group">
                                                        @Html.DropDownListFor(model => model.ContractID, ViewBag.FContract as SelectList, new { @class = "form-control select2" })
                                                        @Html.ValidationMessageFor(model => model.ContractID, "", new { @class = "text-danger" })
                                                    </fieldset>

                                                    <h6 class="invoice-to">Tuzilgan sanasi</h6>
                                                    <fieldset class="form-group position-relative has-icon-left">
                                                        @Html.TextBoxFor(model => model.IssuedDate, new { @class = "form-control pickadate-months-year round", @placeholder = "Buyurtma muddati" })
                                                        @Html.ValidationMessageFor(model => model.IssuedDate, "", new { @class = "text-danger" })
                                                        <div class="form-control-position">
                                                            <i class='bx bx-calendar'></i>
                                                        </div>
                                                    </fieldset>

                                                    <h6 class="invoice-to">Miqdori</h6>
                                                    <fieldset class="invoice-address form-group">
                                                        @Html.TextBoxFor(model => model.Amount, new { @class = "form-control round", @placeholder = "Miqdori" })
                                                        @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
                                                    </fieldset>

                                                    <h6 class="invoice-to">Valyuta</h6>
                                                    <fieldset class="invoice-address form-group">
                                                        @Html.TextBoxFor(model => model.Currency, new { @class = "form-control round", @placeholder = "Foydalanilgan pul birligi" })
                                                        @Html.ValidationMessageFor(model => model.Currency, "", new { @class = "text-danger" })
                                                    </fieldset>

                                                    <h6 class="invoice-to">Batafsil ma`lumot</h6>
                                                    <fieldset class="invoice-address form-group">
                                                        @Html.TextAreaFor(model => model.Description, new { @class = "form-control round", @placeholder = "Qisqacha tavsifi" })
                                                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                                    </fieldset>

                                                    <ul class="list-group list-group-flush">
                                                        <li class="list-group-item border-0 pb-0">
                                                            <button class="btn btn-primary btn-block subtotal-preview-btn" name="create" type="submit" value="Create">
                                                                <i class='bx bx-save'></i>
                                                                Saqlash
                                                            </button>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                            <hr>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    }
}
else
{
    Response.Redirect(Url.Action("Index", "ViewNotAuthorized"));
}
