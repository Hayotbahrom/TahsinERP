@model  tahsinERP.Models.F_TRANSPORT_TYPES
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (tahsinERP.Models.RoleHelper.IsViewPermitted(User.Identity.Name, ViewContext.RouteData.Values["controller"].ToString(), ViewContext.RouteData.Values["action"].ToString()))
{
    <div class="app-content content">
        <div class="content-overlay"></div>
        <div class="content-wrapper">
            <div class="content-header row">
                <div class="content-header-left col-12 mb-2 mt-1">
                    <div class="row breadcrumbs-top">
                        <div class="col-12">
                            <div class="breadcrumb-wrapper col-12">
                                <ol class="breadcrumb rounded-pill breadcrumb-divider">
                                    <li class="breadcrumb-item">
                                        <a href="~/Home"><i class="bx bx-home-alt"></i></a>
                                    </li>
                                    <li class="breadcrumb-item ">
                                        <a href="~/Forwarder">Transport turi ma`lumotlari</a>
                                    </li>
                                    <li class="breadcrumb-item active">
                                        @Model.TransportType ma`lumotlari
                                    </li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="content-body">
                <div class="row">
                    <div class="col-xl-9 col-md-8 col-12">
                        <div class="card">
                            <div class="card-content">
                                <div class="card-body pb-0 mx-25">
                                    <div class="row invoice-info">
                                        <div class="col-lg-12 col-md-6 mt-25">
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            <h4 class="text-primary">Transport turi ma'lumotlari</h4>
                                            <br />
                                            <hr />
                                            <span><b>Transport turi</b>: @Html.DisplayFor(model => model.TransportType)</span>
                                            <br />
                                            <hr />
                                            <span><b>Unit</b>: @Html.DisplayFor(model => model.UNIT.UnitName)</span>
                                            <br />
                                            <hr />
                                            <span><b>Transport og`irligi</b>: @Html.DisplayFor(model => model.TransportWeight)</span>
                                            <br />
                                            <hr />
                                            <span><b>Ko`tarish imkoniyati</b>: @Html.DisplayFor(model => model.CapableOfLifting)</span>
                                            <br />
                                            <br />
                                            <div class="row">
                                                <div class="col-12 col-md-6">
                                                    <div class="card mb-3">
                                                        <div class="card-body">
                                                            <h4 class="card-title text-primary">Tashqi</h4>
                                                            <hr />
                                                            <span><b>Uzunligi</b>: @Html.DisplayFor(model => model.ExtLgth)</span>
                                                            <br />
                                                            <hr />
                                                            <span><b>Kengligi</b>: @Html.DisplayFor(model => model.ExtWdth)</span>
                                                            <br />
                                                            <hr />
                                                            <span><b>Balandligi</b>: @Html.DisplayFor(model => model.ExtHght)</span>
                                                            <br />
                                                              <hr />
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-12 col-md-6">
                                                    <div class="card mb-3">
                                                        <div class="card-body">
                                                            <h4 class="card-title text-primary">Ichki</h4>
                                                            <hr />
                                                            <span><b>Uzunligi</b>: @Html.DisplayFor(model => model.IntLgth)</span>
                                                            <br />
                                                            <hr />
                                                            <span><b>Kengligi</b>: @Html.DisplayFor(model => model.IntWdth)</span>
                                                            <br />
                                                            <hr />
                                                            <span><b>Balandligi</b>: @Html.DisplayFor(model => model.IntHght)</span>
                                                            <br />
                                                            <hr />
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
else
{
    Response.Redirect(Url.Action("Index", "ViewNotAuthorized"));
}

