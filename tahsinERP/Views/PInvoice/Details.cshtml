        margin: 0 auto;
        border: 1px solid #000;
        padding: 20px;
    }

    .header, .footer {
        text-align: center;
        margin-bottom: 20px;
    }

        .header table, .content table {
            width: 100%;
            border-collapse: collapse;
        }

        .header th, .header td, .content th, .content td {
            border: 1px solid #000;
            padding: 8px;
            text-align: left;
        }

    .content th {
        background-color: #f2f2f2;
    }

    .footer {
        margin-top: 20px;
    }

    .total {
        font-weight: bold;
    }
</style>

