
@model tahsinERP.ViewModels.PurchasingItemViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (tahsinERP.Models.RoleHelper.IsChangePermitted(User.Identity.Name, ViewContext.RouteData.Values["controller"].ToString(), ViewContext.RouteData.Values["action"].ToString()))
{
    using (Html.BeginForm("Edit", "PurchosingItem", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="app-content content">
            <div class="content-overlay"></div>
            <div class="content-wrapper">
                <div class="content-header row">
                    <div class="content-header-left col-12 mb-2 mt-1">
                        <div class="row breadcrumbs-top">
                            <div class="col-12">
                                <div class="breadcrumb-wrapper col-12">
                                    <ol class="breadcrumb rounded-pill breadcrumb-divider">
                                        <li class="breadcrumb-item">
                                            <a href="~/Home"><i class="bx bx-home-alt"></i></a>
                                        </li>
                                        <li class="breadcrumb-item">
                                            <a href="~/PurchosingItem/Index">Purchosing Item</a>
                                        </li>
                                        <li class="breadcrumb-item active">
                                            PurchosingItem ni tahrirlash
                                        </li>
                                    </ol>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="content-body">
                    <!-- app invoice View Page -->
                    <section class="basic-select2">
                        <div class="row">
                            <!-- invoice view page -->
                            <div class="col-xl-9 col-md-8 col-12">
                                <div class="card">
                                    <div class="card-content">
                                        <div class="card-body pb-0 mx-25">
                                            <div class="row">
                                                <div class="col-lg-12 col-md-6 mt-25">
                                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                    <hr>
                                                    <div class="row my-2 py-50">
                                                        <div class="col-sm-6 col-12 order-2 order-sm-1">
                                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                            <h6 class="invoice-to">Item Code</h6>
                                                            <fieldset class="invoice-address form-group">
                                                                @Html.TextBoxFor(model => model.ItemCode, new { @class = "form-control", @placeholder = "Nomi", @required = "required" })
                                                                @Html.ValidationMessageFor(model => model.ItemCode, "", new { @class = "text-danger" })
                                                            </fieldset>
                                                            <h6 class="invoice-to">Item nomi</h6>
                                                            <fieldset class="invoice-address form-group">
                                                                @Html.TextAreaFor(model => model.ItemName, new { @class = "form-control select2" })
                                                                @Html.ValidationMessageFor(model => model.ItemName, "", new { @class = "text-danger" })
                                                            </fieldset>
                                                            <h6 class="invoice-to">Batafsil ma'lumot</h6>
                                                            <fieldset class="invoice-address form-group">
                                                                @Html.DropDownListFor(model => model.Desciption, ViewBag.HSCode as SelectList, new { @class = "form-control select2" })
                                                                @Html.ValidationMessageFor(model => model.Desciption, "", new { @class = "text-danger" })
                                                            </fieldset>
                                                            <h6 class="invoice-to">O'lchov birligi</h6>
                                                            <fieldset class="invoice-address form-group">
                                                                @Html.DropDownListFor(model => model.UnitID, (SelectList)ViewBag.UNIT, "Select Unit", new { @class = "form-control select2" })
                                                                @Html.ValidationMessageFor(model => model.UnitID, "", new { @class = "text-danger" })
                                                            </fieldset>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-lg-12 col-md-6 mt-25">
                                                            <ul class="list-group list-group-flush">
                                                                <li class="list-group-item border-0 pb-0">
                                                                    <button class="btn btn-primary btn-block subtotal-preview-btn" name="create" type="submit" value="Create">
                                                                        <i class='bx bx-save'></i>
                                                                        Saqlash
                                                                    </button>
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    }
}
else
{
    Response.Redirect(Url.Action("Index", "ViewNotAuthorized"));
}
