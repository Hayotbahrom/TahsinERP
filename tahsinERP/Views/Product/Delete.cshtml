@model tahsinERP.Models.PRODUCT
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (tahsinERP.Models.RoleHelper.IsChangePermitted(User.Identity.Name, ViewContext.RouteData.Values["controller"].ToString(), ViewContext.RouteData.Values["action"].ToString()))
{
    using (Html.BeginForm("Delete", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="app-content content">
            <div class="content-overlay"></div>
            <div class="content-wrapper">
                <div class="content-header row">
                    <div class="content-header-left col-12 mb-2 mt-1">
                        <div class="row breadcrumbs-top">
                            <div class="col-12">
                                <div class="breadcrumb-wrapper col-12">
                                    <ol class="breadcrumb rounded-pill breadcrumb-divider">
                                        <li class="breadcrumb-item">
                                            <a href="~/Home"><i class="bx bx-home-alt"></i></a>
                                        </li>
                                        <li class="breadcrumb-item ">
                                            <a href="~/Product">Maxsulotlar</a>
                                        </li>
                                        <li class="breadcrumb-item active">
                                            @Model.PNo ni o'chirib yuborish
                                        </li>
                                    </ol>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="content-body">
                    <!-- app invoice View Page -->
                    <section class="invoice-edit-wrapper">
                        <div class="row">
                            <!-- invoice view page -->
                            <div class="col-xl-9 col-md-8 col-12">
                                <div class="card">
                                    <div class="card-content">
                                        <div class="card-body pb-0 mx-25">
                                            <div class="row invoice-info">
                                                <div class="col-lg-12 col-md-6 mt-25">
                                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                                    <h4 class="text-primary">Maxsulot malumotlari</h4>
                                                    <hr>
                                                    <span><b>Maxsulot raqami</b>: @Html.DisplayFor(model => model.PNo)</span>
                                                    <br />
                                                    <span><b>Nomi</b>: @Html.DisplayFor(model => model.Name)</span>
                                                    <br />
                                                    <span><b>Og'irligi</b>: @Html.DisplayFor(model => model.Weight)</span>
                                                    <br />
                                                    <span><b>Uzunligi</b>: @Html.DisplayFor(model => model.Length)</span>
                                                    <br />
                                                    <span><b>Kengligi</b>: @Html.DisplayFor(model => model.Width)</span>
                                                    <br />
                                                    <span><b>Balandligi</b>: @Html.DisplayFor(model => model.Height)</span>
                                                    <br />
                                                    <span><b>O'lchov birligi</b>: @Html.DisplayFor(model => model.Unit)</span>
                                                    <br />
                                                    <span><b>Turi</b>: @Html.DisplayFor(model => model.Type)</span>
                                                    <br />
                                                    <span><b>Tavsifi</b>: @Html.DisplayFor(model => model.Description)</span>
                                                    <br />
                                                    <span><b>PNo2</b>: @Html.DisplayFor(model => model.PNo2)</span>
                                                    <br />
                                                    <span><b>PNo3</b>: @Html.DisplayFor(model => model.PNo3)</span>
                                                    <br />
                                                    <span><b>PNo4</b>: @Html.DisplayFor(model => model.PNo4)</span>
                                                    <br />
                                                </div>
                                                <ul class="list-group list-group-flush">
                                                    <li class="list-group-item border-0 pb-0">
                                                        <button class="btn btn-danger bg-light btn-block subtotal-preview-btn" name="delete" type="submit" value="Delete">
                                                            <i class='bx bx-trash'></i>
                                                            O'chirish
                                                        </button>
                                                    </li>
                                                </ul>
                                            </div>
                                            <hr>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    }
}
else
{
    Response.Redirect(Url.Action("Index", "ViewNotAuthorized"));
}