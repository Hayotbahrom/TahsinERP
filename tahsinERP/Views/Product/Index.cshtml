@model List<tahsinERP.Models.PRODUCT>

@{
    ViewBag.Title = "Product Index";
}



@if (tahsinERP.Models.RoleHelper.IsViewPermitted(User.Identity.Name, "Product"))
{
    bool changePermit = false;
    if (tahsinERP.Models.RoleHelper.IsChangePermitted(User.Identity.Name, "Product"))
    {
        changePermit = true;
    }
    <div class="app-content content">
        <div class="content-overlay"></div>
        <div class="content-wrapper">
            <div class="content-header row">
                <div class="content-header-left col-12 mb-2 mt-1">
                    <div class="row breadcrumbs-top">
                        <div class="col-12">
                            <div class="breadcrumb-wrapper col-12">
                                <ol class="breadcrumb p-0 mb-0">
                                    <li class="breadcrumb-item">
                                        <a href="~/Home"><i class="bx bx-home-alt"></i></a>
                                    </li>
                                    <li class="breadcrumb-item ">
                                        Sahifalar
                                    </li>
                                    <li class="breadcrumb-item active">
                                        Maxsulotlar
                                    </li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="content-body">
                <!-- users list start -->
                <section class="invoice-list-wrapper">
                    @if (changePermit)
                    {
                        <div class="invoice-create-btn mb-1">
                            <button type="button" class="btn btn-outline-success mr-1 mb-1" onclick="window.location.href='/Product/Create';">
                                <span class="align-middle ml-25">Maxsulot qo'shish</span>
                            </button>
                            <button type="button" class="btn btn-outline-primary mr-1 mb-1" id="exportButton" onclick="window.location.href='/Product/UploadWithExcel'">
                                <i class="bx bx-file"></i><span class="align-middle ml-25">Excel orqali maxsulot qo'shish</span>
                            </button>
                        </div>
                    }
                    <div class="users-list-filter px-1">
                        <form>
                            <div class="row border rounded py-2 mb-2">
                                
                                <div class="col-12 col-sm-12 col-lg-4 d-flex align-items-center">
                                    <a href="~/Product" class="btn btn-secondary bg-light invoice-create" role="button" aria-pressed="true">
                                        Ro'yxatni yangilash
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-12 col-sm-12">
                        <div class="card">
                            <div class="card-content">
                                <div class="card-body">
                                    <!-- datatable start -->
                                    <div class="table-responsive table-responsivetable-responsive">
                                        <table id="myDataTable" class="table table-striped table-bordered complex-headers" style="width:100%">
                                            <thead>
                                                <tr>
                                                    <th>Maxsulot raqami</th>
                                                    <th>Nomi</th>
                                                    <th>Og'irligi</th>
                                                    <th>Uzunligi</th>
                                                    <th>O'lchov birligi</th>
                                                    <th>Tavsifi</th>
                                                    @if (changePermit)
                                                    {
                                                        <th>amallar</th>
                                                    }
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>
                                                            <a href="~/Product/Details/@item.ID">@item.PNo</a>
                                                        </td>
                                                        <td><a href="~/Product/Details/@item.ID">@item.Name</a></td>
                                                        <td>@item.Weight</td>
                                                        <td>@item.Height</td>
                                                        <td>@item.Unit</td>
                                                        <td>@item.Description</td>
                                                        @if (changePermit)
                                                        {
                                                            <td>
                                                                <div>
                                                                    <a href="@Url.Action("Edit", "Product", new { id = item.ID })"><i class="bx bx-edit-alt"></i></a>
                                                                    <a href="@Url.Action("Delete", "Product", new { id = item.ID })"><i class="bx bx-trash"></i></a>
                                                                </div>
                                                            </td>
                                                        }
                                                    </tr>
                                                }
                                            </tbody>
                                            <tfoot>
                                                <tr>
                                                    <th>Maxsulot raqami</th>
                                                    <th>Nomi</th>
                                                    <th>Og'irligi</th>
                                                    <th>Uzunligi</th>
                                                    <th>O'lchov birligi</th>
                                                    <th>Tavsifi</th>
                                                    @if (changePermit)
                                                    {
                                                        <th>amallar</th>
                                                    }
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                    <!-- datatable ends -->
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <!-- users list ends -->
            </div>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script type="text/javascript">
        function refreshDataTable() {
            const source = document.getElementById("SourceID").value;

            window.location.href = '@Url.Action("Index", "Product")?type=' + source;
        }
    </script>
}
else
{
    Response.Redirect(Url.Action("Index", "ViewNotAuthorized"));
}