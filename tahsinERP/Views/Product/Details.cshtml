@model tahsinERP.Models.PRODUCT

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (tahsinERP.Models.RoleHelper.IsViewPermitted(User.Identity.Name, ViewContext.RouteData.Values["controller"].ToString(), ViewContext.RouteData.Values["action"].ToString()))
{
    <div class="app-content content">
        <div class="content-overlay"></div>
        <div class="content-wrapper">
            <div class="content-header row">
                <div class="content-header-left col-12 mb-2 mt-1">
                    <div class="row breadcrumbs-top">
                        <div class="col-12">
                            <div class="breadcrumb-wrapper col-12">
                                <ol class="breadcrumb rounded-pill breadcrumb-divider">
                                    <li class="breadcrumb-item">
                                        <a href="~/Home"><i class="bx bx-home-alt"></i></a>
                                    </li>
                                    <li class="breadcrumb-item">
                                        <a href="~/Product/Index">Maxsulotlar</a>
                                    </li>
                                    <li class="breadcrumb-item active">
                                        @Model.PNo sahifasi
                                    </li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="content-body">
                <div class="row">
                    <div class="col-xl-12 col-md-12 col-12">
                        <div class="card">
                            <div class="card-content">
                                <div class="card-body pb-0 mx-25">
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12 mt-25">

                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                            <h4 class="text-primary">Maxsulot malumotlari</h4>
                                            <hr>

                                            <div class="row my-2 py-50">
                                                <div class="col-sm-12 col-12 order-2 order-sm-1">
                                                    <span><b>Maxsulot raqami</b>: @Html.DisplayFor(model => model.PNo)</span>
                                                    <br />
                                                    <span><b>Nomi</b>: @Html.DisplayFor(model => model.Name)</span>
                                                    <hr />
                                                    <br />
                                                    <span><b>Og'irligi</b>: @Html.DisplayFor(model => model.Weight)</span>
                                                    <br />
                                                    <span><b>Uzunligi</b>: @Html.DisplayFor(model => model.Length)</span>
                                                    <br />
                                                    <span><b>Kengligi</b>: @Html.DisplayFor(model => model.Width)</span>
                                                    <br />
                                                    <span><b>Balandligi</b>: @Html.DisplayFor(model => model.Height)</span>
                                                    <br />
                                                    <span><b>O'lchov birligi</b>: @Html.DisplayFor(model => model.UNIT.ShortName)</span>
                                                    <br />
                                                    <hr />
                                                    <span><b>Turi</b>: @Html.DisplayFor(model => model.Type)</span>
                                                    <br />
                                                    <span><b>Tavsifi</b>: @Html.DisplayFor(model => model.Description)</span>
                                                    <br />
                                                    <span><b>PNo2</b>: @Html.DisplayFor(model => model.PNo2)</span>
                                                    <br />
                                                    <span><b>PNo3</b>: @Html.DisplayFor(model => model.PNo3)</span>
                                                    <br />
                                                    <span><b>PNo4</b>: @Html.DisplayFor(model => model.PNo4)</span>
                                                    <br />
                                                </div>
                                                <div class="col-sm-6 col-12 order-1 order-sm-1 d-flex justify-content-end">
                                                    @if (ViewBag.ProductImage != null)
                                                    {
                                                        <div class="product-image">
                                                            <fieldset>
                                                                <h4>Maxsulot rasmi</h4>
                                                                <img src="data:image/png;base64,@ViewBag.ProductImage" alt="Product Image" style="width: 300px; height: auto;" />
                                                                <hr>
                                                            </fieldset>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <hr>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    Response.Redirect(Url.Action("Index", "ViewNotAuthorized"));
}
