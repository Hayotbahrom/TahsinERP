@model tahsinERP.ViewModels.BOM.BomViewModel
@if (tahsinERP.Models.RoleHelper.IsViewPermitted(User.Identity.Name, "BOM"))
{
    bool changePermit = false;
    if (tahsinERP.Models.RoleHelper.IsChangePermitted(User.Identity.Name, "BOM"))
    {
        changePermit = true;
    }
    <div class="app-content content">
        <div class="content-overlay"></div>
        <div class="content-wrapper">
            <div class="content-header row">
                <div class="content-header-left col-12 mb-2 mt-1">
                    <div class="row breadcrumbs-top">
                        <div class="col-12">
                            <div class="breadcrumb-wrapper col-12">
                                <ol class="breadcrumb rounded-pill breadcrumb-divider">
                                    <li class="breadcrumb-item">
                                        <a href="~/Home"><i class="bx bx-home-alt"></i></a>
                                    </li>
                                    <li class="breadcrumb-item ">
                                        Sahifalar
                                    </li>
                                    <li class="breadcrumb-item">
                                        BOM
                                    </li>
                                    <li class="breadcrumb-item active">
                                        @Model.ProductNo 
                                    </li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="content-body">
                <!-- users list start -->
                <section class="invoice-list-wrapper">
                    <div class="col-md-12 col-sm-12">
                        <div class="card">
                            <div class="card-content">
                                <h4>@Model.ProductNo ning BOM ro'yxati</h4>
                                <div class="card-body">
                                    <!-- datatable start -->
                                    <div class="table-responsive table-responsivetable-responsive">
                                        <table id="myDataTable" class="table table-bordered" style="width:100%">
                                            <thead>
                                                <tr>
                                                    <th>Detall raqami</th>
                                                    <th>Consumption</th>
                                                    <th>Unit</th>
                                                    <th>IsInHouse</th>
                                                    <th>Norma</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in @ViewBag.partList)
                                                {
                                                    <tr>
                                                        <td>@item.PART.PNo</td>
                                                        <td>@item.Quantity</td>
                                                        <td>@item.Unit</td>
                                                        <td>@item.InHouse</td>

                                                        @if (item.InHouse)
                                                        {

                                                            <td>
                                                                <div>

                                                                    <a href="@Url.Action("BomCreate", "BOM", new { id = item.PART.ID })">Yaratish<i class="bx bx-edit-alt"></i></a>
                                                                </div>
                                                            </td>
                                                        }
                                                        else
                                                        {
                                                            <td>-</td>
                                                        }
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                    <!-- datatable ends -->
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <!-- users list ends -->
            </div>
        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script type="text/javascript">
        function refreshDataTable() {
            const source = document.getElementById("SourceID").value;
            const checked = source === 'Faqat Maxsulotlar';
            console.log(source);// Use triple equals for strict comparison

        window.location.href = '@Url.Action("Index", "BOM")?IsParentProduct=' + checked;
    }
    </script>
}
else
{
    Response.Redirect(Url.Action("Index", "ViewNotAuthorized"));
}
