@model tahsinERP.Models.CUSTOMER

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (tahsinERP.Models.RoleHelper.IsChangePermitted(User.Identity.Name, ViewContext.RouteData.Values["controller"].ToString(), ViewContext.RouteData.Values["action"].ToString()))
{
    using (Html.BeginForm("Delete", "Customer", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="app-content content">
            <div class="content-overlay"></div>
            <div class="content-wrapper">
                <div class="content-header row">
                    <div class="content-header-left col-12 mb-2 mt-1">
                        <div class="row breadcrumbs-top">
                            <div class="col-12">
                                <div class="breadcrumb-wrapper col-12">
                                    <ol class="breadcrumb rounded-pill breadcrumb-divider">
                                        <li class="breadcrumb-item">
                                            <a href="~/Home"><i class="bx bx-home-alt"></i></a>
                                        </li>
                                        <li class="breadcrumb-item">
                                            <a href="~/Customer/Index">Xaridorlar</a>
                                        </li>
                                        <li class="breadcrumb-item active">
                                            Xaridorni O'chirish
                                        </li>
                                    </ol>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="content-body">
                    <section class="basic-select2">
                        <div class="row">
                            <div class="col-xl-9 col-md-8 col-12">
                                <div class="card">
                                    <div class="card-content">
                                        <div class="card-body pb-0 mx-25">
                                            <div class="row">
                                                <div class="col-lg-12 col-md-6 mt-25">
                                                    <hr>
                                                    <h6 class="invoice-to">Siz ushbu xaridorni o'chirmoqchimisiz?</h6>
                                                    <hr>
                                                    <span><b>Nomi</b>: @Html.DisplayFor(model => model.Name, new { @class = "form-control" })</span>
                                                    <br />
                                                    <span><b>DUNS</b>: @Html.DisplayFor(model => model.DUNS, new { @class = "form-control" })</span>
                                                    <hr />
                                                    <section>
                                                        <div>
                                                            <h6 class="text-primary">Geografik ma'lumotlari</h6>
                                                            <span><b>Source</b>: @Html.DisplayFor(model => model.Type, new { @class = "form-control" })</span>
                                                            <br />
                                                            <span><b>Mamlakati</b>: @Html.DisplayFor(model => model.Country, new { @class = "form-control" })</span>
                                                            <br />
                                                            <span><b>Shaxri</b>: @Html.DisplayFor(model => model.City, new { @class = "form-control" })</span>
                                                            <br />
                                                            <span><b>Manzili</b>: @Html.DisplayFor(model => model.Address, new { @class = "form-control" })</span>
                                                            <br />
                                                            <hr />
                                                        </div>
                                                    </section>
                                                    <h6 class="text-primary">Murojaat uchun</h6>
                                                    <span><b>Rahbari</b>: @Html.DisplayFor(model => model.DirectorName, new { @class = "form-control" })</span>
                                                    <br />
                                                    <span><b>Ma'sul xodimi</b>: @Html.DisplayFor(model => model.ContactPersonName, new { @class = "form-control" })</span>
                                                    <br />
                                                    <span><b>E-mail</b>: @Html.DisplayFor(model => model.Email, new { @class = "form-control" })</span>
                                                    <br />
                                                    <span><b>Telefon raqami:</b>: @Html.DisplayFor(model => model.Telephone, new { @class = "form-control" })</span>
                                                    <hr />
                                                    <ul class="list-group list-group-flush">
                                                        <li class="list-group-item border-0 pb-0">
                                                            <button class="btn btn-danger btn-block subtotal-preview-btn" name="delete" type="submit" value="Delete">
                                                                <i class='bx bx-trash'></i>
                                                                O'chirish
                                                            </button>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                            <hr>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    }
}
else
{
    Response.Redirect(Url.Action("Index", "ViewNotAuthorized"));
}
