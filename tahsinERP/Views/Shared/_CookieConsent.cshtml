@* Views/Shared/_CookieConsent.cshtml *@
<div id="cookieConsent" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Cookie-fayllardan foydalanish</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Biz sizga veb-saytimizda eng yaxshi tajribani taqdim etishimiz uchun cookie-fayllardan foydalanamiz.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="acceptCookies">Qabul qilaman</button>
            </div>
        </div>
    </div>
</div>
