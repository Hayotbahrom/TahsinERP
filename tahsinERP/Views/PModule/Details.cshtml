@model tahsinERP.ViewModels.PermissionModuleViewModel
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}
<div class="app-content content">
    <div class="content-overlay"></div>
    <div class="content-wrapper">
        <div class="content-header row">
        </div>
        <div class="content-body">
            <!-- app invoice View Page -->
            <section class="invoice-edit-wrapper">
                <div class="row">
                    <!-- invoice view page -->
                    <div class="col-xl-9 col-md-8 col-12">
                        <div class="card">
                            <div class="card-content">
                                <div class="card-body pb-0 mx-25">
                                    <div class="row invoice-info">
                                        <div class="col-lg-12 col-md-6 mt-25">
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            <hr>
                                            <h6 class="invoice-to">Permission Moduli</h6>
                                            <fieldset class="invoice-address form-group">
                                                @Html.DisplayFor(model => model.Module, new { @class = "form-control" })
                                            </fieldset>
                                            <h6 class="invoice-to">Permission Rollari</h6>
                                            <fieldset class="invoice-address form-group">
                                                @Html.DisplayFor(model => model.RoleNames, new { @class = "form-control" })
                                            </fieldset>
                                        </div>
                                    </div>
                                    <hr>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
