@model IEnumerable<tahsinERP.ViewModels.PermissionModuleViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}
@if (tahsinERP.Models.RoleHelper.IsViewPermitted(User.Identity.Name, "PermissionModule"))
{
    bool changePermit = false;
    if (tahsinERP.Models.RoleHelper.IsChangePermitted(User.Identity.Name, "PermissionModule"))
    {
        changePermit = true;
    }
    <div class="app-content content">
        <div class="content-overlay"></div>
        <div class="content-wrapper">
            <div class="content-header row">
            </div>
            <div class="content-body">
                <!-- users list start -->
                <section class="invoice-list-wrapper">
                    @if (changePermit)
                    {
                        <div class="invoice-create-btn mb-1">
                            <a href="@Url.Action("Create", "PModule")" class="btn btn-primary glow invoice-create" role="button" aria-pressed="true">
                                Modul qoshish
                            </a>
                        </div>
                    }
                        <div class="col-md-12 col-sm-12">
                            <div class="card">
                                <div class="card-content">
                                    <div class="card-body">
                                        <!-- datatable start -->
                                        <div class="card-datatable table-responsivetable-responsive">
                                            <table class="table invoice-data-table dt-responsive nowrap" style="width:100%">
                                                <thead>
                                                    <tr>
                                                        @if (changePermit)
                                                        {
                                                            <th></th>
                                                            <th></th>
                                                        }
                                                        <th>Modul Nomi</th>
                                                        <th>Roli</th>
                                                        @if (changePermit)
                                                        {
                                                            <th>Edit</th>
                                                        }
                                                        </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model)
                                                    {
                                                        <tr>
                                                            @if (changePermit)
                                                            {
                                                                <td></td>
                                                                <td></td>
                                                            }
                                                            <td>
                                                                <a href="~/PModule/Details/@item.ID">@item.Module</a>
                                                            </td>
                                                            <td>
                                                                @item.RoleNames
                                                            </td>
                                                            @if (changePermit)
                                                            {
                                                                <td>
                                                                    <div>
                                                                        <a href="@Url.Action("Edit", "PModule", new { id = item.ID })"><i class="bx bx-edit-alt"></i></a>
                                                                        <a href="@Url.Action("Delete", "PModule", new { id = item.ID })"><i class="bx bx-trash"></i></a>
                                                                    </div>
                                                                </td>
                                                            }
                                                            </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                        <!-- datatable ends -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                <!-- users list ends -->
            </div>
        </div>
    </div>
}
else
{
    Response.Redirect(Url.Action("Index", "ViewNotAuthorized"));
}

