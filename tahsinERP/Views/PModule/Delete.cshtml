@model tahsinERP.ViewModels.PermissionModuleViewModel

@{
    ViewBag.Title = "Delete Confirmation";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}
@if (tahsinERP.Models.RoleHelper.IsChangePermitted(User.Identity.Name, ViewContext.RouteData.Values["controller"].ToString(), ViewContext.RouteData.Values["action"].ToString()))
{
    <div class="app-content content">
        <div class="content-overlay"></div>
        <div class="content-wrapper">
            <div class="content-header row">
                <div class="content-header-left col-12 mb-2 mt-1">
                    <div class="row breadcrumbs-top">
                        <div class="col-12">
                            <div class="breadcrumb-wrapper col-12">
                                <ol class="breadcrumb rounded-pill breadcrumb-divider">
                                    <li class="breadcrumb-item">
                                        <a href="~/AdminPanel/Index"><i class="bx bx-home-alt"></i></a>
                                    </li>
                                    <li class="breadcrumb-item ">
                                        Admin Panel
                                    </li>
                                    <li class="breadcrumb-item ">
                                        <a href="~/PModule/Index">Ruxsatlar</a>
                                    </li>
                                    <li class="breadcrumb-item active">
                                        @Model.Module ruhsat malumotlari
                                    </li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="content-body">
                <section class="invoice-edit-wrapper">
                    <div class="row">
                        <div class="col-xl-9 col-md-8 col-12">
                            <div class="card">
                                <div class="card-content">
                                    <div class="card-body pb-0 mx-25">
                                        <div class="row invoice-info">
                                            <div class="col-lg-12 col-md-6 mt-25">
                                                <h6 class="invoice-to">Ruxsat Moduli</h6>
                                                <fieldset class="invoice-address form-group">
                                                    @Html.DisplayFor(model => model.Module, new { @class = "form-control" })
                                                </fieldset>
                                                <h6 class="invoice-to">Controller nomi</h6>
                                                <fieldset class="invoice-address form-group">
                                                    @Html.DisplayFor(model => model.Controller, new { @class = "form-control" })
                                                </fieldset>
                                                <h6 class="invoice-to">Action nomi</h6>
                                                <fieldset class="invoice-address form-group">
                                                    @Html.DisplayFor(model => model.Action, new { @class = "form-control" })
                                                </fieldset>
                                                <h6 class="invoice-to">Parametr nomi</h6>
                                                <fieldset class="invoice-address form-group">
                                                    @Html.DisplayFor(model => model.Parametr, new { @class = "form-control" })
                                                </fieldset>
                                                <h6 class="invoice-to">Ruxsat Rollari</h6>
                                                <fieldset class="invoice-address form-group">
                                                    @Html.DisplayFor(model => model.RoleNames, new { @class = "form-control" })
                                                </fieldset>
                                                <hr />
                                                <h6>Haqiqatan ham ushbu modul va uning ruxsatnomalarini oʻchirib tashlamoqchimisiz?</h6>
                                                @using (Html.BeginForm("Delete", "PModule", FormMethod.Post))
                                                {
                                                    @Html.AntiForgeryToken()
                                                    @Html.HiddenFor(model => model.ID)
                                                    <input type="submit" value="Delete" class="btn btn-danger" />
                                                    <a href="~/PModule" class="btn btn-secondary">Cancel</a>
                                                }
                                            </div>
                                        </div>
                                        <hr />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
}
else
{
    Response.Redirect(Url.Action("Index", "ViewNotAuthorized"));
}
